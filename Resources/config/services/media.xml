<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/media.xml"/>
    </imports>

    <services>
        <service id="dataset.transformer.image_path" class="WellCommerce\Bundle\MediaBundle\DataSet\Transformer\ImagePathTransformer">
            <argument type="service" id="image.helper"/>
            <tag name="dataset.transformer" alias="image_path"/>
        </service>

        <service id="media.uploader" class="WellCommerce\Bundle\MediaBundle\Uploader\MediaUploader">
            <argument type="service" id="media.manager"/>
            <argument>%kernel.root_dir%/../web/media</argument>
            <argument type="service" id="validator.helper"/>
        </service>
    </services>
</container>
